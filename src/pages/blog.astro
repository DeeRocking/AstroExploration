---
import BaseLayouts from "../layouts/BaseLayouts.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }))
const pageTitle = "My Astro Learining Blog"
---

<BaseLayouts pageTitle={pageTitle}>
	<h1>My Astro Learing Blog</h1>
	<p>Here are my blog posts about physics and programing!</p>
	<ul>
		{allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title}/>)}
	</ul>
</BaseLayouts>
